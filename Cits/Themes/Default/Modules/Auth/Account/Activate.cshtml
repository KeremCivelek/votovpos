﻿
@{
    ViewBag.Title = Html.Localize("Kullanıcı Aktivasyon");
    Layout = "~/Themes/Default/Modules/Auth/Shared/_LayoutPublic.cshtml";
}

<v-container fluid fill-height>
    <v-layout column>
        <v-flex></v-flex>
        <v-flex grow shrink>
            <v-row>
                <v-col col="1"></v-col>
                <v-col cols="auto">
                    <v-card elevation="5" min-width="300" max-width="400">
                        <v-toolbar dark dense flat color="blue-grey darken-4">
                            <v-toolbar-title>@Html.Localize("Kullanıcı Aktivasyon")</v-toolbar-title>
                            <v-spacer></v-spacer>
                            <v-btn small text href="/">
                                <v-icon>mdi-home</v-icon>
                                <span>@Html.Localize("Anasayfa")</span>
                            </v-btn>
                        </v-toolbar>
                        <v-card-text>
                            <v-form ref="frmActivate" v-on:submit.prevent>
                                <v-container>
                                    <v-row dense>
                                        <v-col>
                                            <span>@Html.Localize("Aktivasyon Kodu")</span>
                                        </v-col>
                                    </v-row>
                                    <v-row>
                                        <v-col>
                                            <v-otp-input length="6"
                                                         type="number"
                                                         v-model="activate.ActivationCode">
                                            </v-otp-input>
                                        </v-col>
                                    </v-row>
                                </v-container>
                            </v-form>
                        </v-card-text>
                        <v-footer padless dark color="blue-grey darken-4">
                            <v-btn small text class="no-transform" href="@Url.GetUrl("Account","Login",AuthModule.ThisModule.ModuleStarter.AreaName)">
                                <v-icon small>mdi-login</v-icon>
                                <span>@Html.Localize("Giriş Sayfasına Dön")</span>
                            </v-btn>
                            <v-spacer></v-spacer>
                            <v-btn small text class="no-transform" v-on:click="cmd_activate">
                                <v-icon small>mdi-account-tie</v-icon>
                                <span>@Html.Localize("Hesabı Aktif Et")</span>
                            </v-btn>
                        </v-footer>
                    </v-card>
                </v-col>
                <v-col></v-col>
            </v-row>
        </v-flex>
        <v-flex></v-flex>
    </v-layout>
</v-container>

@section scripts{
    <script src="/Themes/Default/Modules/Auth/UI/js/Account/activate.js"></script>
    <script>
        data.activate.UserGuid = '@ViewBag.UserGuid';
    </script>
}