﻿
@{
    ViewBag.Title = Html.Localize("Şifremi Unuttum");
    Layout = "~/Themes/Default/Modules/Auth/Shared/_LayoutPublic.cshtml";
}


<v-container fluid fill-height>
    <v-layout column>
        <v-flex></v-flex>
        <v-flex grow shrink>
            <v-row>
                <v-col col="1"></v-col>
                <v-col cols="auto">
                    <v-card elevation="5" min-width="300" max-width="400">
                        <v-toolbar dark dense flat color="blue-grey darken-4">
                            <v-toolbar-title>@Html.Localize("Şifremi Unuttum")</v-toolbar-title>
                            <v-spacer></v-spacer>
                            <v-btn small text href="/">
                                <v-icon>mdi-home</v-icon>
                                <span>@Html.Localize("Anasayfa")</span>
                            </v-btn>
                        </v-toolbar>
                        <v-card-text>
                            <v-form ref="frmForgotPassword" v-on:submit.prevent>
                                <v-container>
                                    <v-row dense>
                                        <v-col>
                                            <span>@Html.Localize("Şifre sıfırlamak için posta adresinizi girin")</span>
                                        </v-col>
                                    </v-row>
                                    <v-row>
                                        <v-col>
                                            <v-text-field dense outlined hide-details
                                                          v-bind:type="'email'"
                                                          label="@Html.Localize("E-Posta Adresiniz")"
                                                          placeholder="@Html.Localize("E-Posta Adresiniz")"
                                                          v-bind:rules="forgot.EMail_rules"
                                                          v-model="forgot.EMail">
                                            </v-text-field>
                                        </v-col>
                                    </v-row>
                                </v-container>
                            </v-form>
                        </v-card-text>
                        <v-footer padless dark color="blue-grey darken-4">
                            <v-btn x-small text href="@Url.GetUrl("Account","Login",AuthModule.ThisModule.ModuleStarter.AreaName)">
                                <v-icon small>mdi-login</v-icon>
                                <span>@Html.Localize("Giriş Sayfasına Dön")</span>
                            </v-btn>
                            <v-spacer></v-spacer>
                            <v-btn x-small text v-on:click="cmd_send">
                                <v-icon small>mdi-account-tie</v-icon>
                                <span>@Html.Localize("Doğrulama Postası Gönder")</span>
                            </v-btn>
                        </v-footer>
                    </v-card>
                </v-col>
                <v-col></v-col>
            </v-row>
        </v-flex>
        <v-flex></v-flex>
    </v-layout>
</v-container>

@section scripts{
    <script src="/Themes/Default/Modules/Auth/UI/js/Account/forgotpassword.js"></script>
}